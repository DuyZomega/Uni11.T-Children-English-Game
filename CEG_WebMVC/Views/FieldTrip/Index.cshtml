@model dynamic﻿
@{
    ViewData["Title"] = "Field Trip Page";
    string locationSearchName = string.Empty;
    string locationSearchAddress = string.Empty;
    string locationSearchRoad = string.Empty;
    string locationSearchDistrict = string.Empty;
    string locationSearchCity = string.Empty;

    List<BAL.ViewModels.FieldTripViewModel> fieldtripList = Model.FieldTrips;
}

<html lang="en">
<html>
  <head>
    <meta charset="utf-8" />
  </head>
 <body class="background">
    <hr>
    <div class="header__breadcrumb container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">All FieldTrips</li>
            </ol>
        </nav>
    </div>
    <hr>

    <!-- CONTENT -->
    <section class="content__list-room container">
        <div class="row">
            <div class="content__filter col-3">
                <div class="content__filter-tabs-left">
                    <form asp-action="Index" asp-controller="FieldTrip" method="get" asp-route-locationAddress="@locationSearchAddress">
                        <div class="tabs-left-title">
                            <h3 class="heading">Filter</h3>
                        </div>
                        <div class="tabs-left-filter" style="background-color:white">
                            <div class="input-group mb-3">
                                <select asp-for="@locationSearchRoad" asp-items="@Model.Roads" class="custom-select" name="road" id="road">
                                    <option value="">Road</option>
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <select asp-for="@locationSearchDistrict" asp-items="@Model.Districts" class="custom-select" name="district" id="district">
                                    <option value="">District</option>
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <select asp-for="@locationSearchCity" asp-items="@Model.Cities" class="custom-select" name="city" id="city">
                                    <option value="">City</option>
                                </select>
                            </div>
                        </div>
                        <div class="filter-search text-center">
                                @{
                                    locationSearchAddress = "," + locationSearchRoad + "," + locationSearchDistrict + "," + locationSearchCity;
                                }
                                
                                <button class="button--primary" type="submit"><i class="fa fa-filter"></i> Filter</button>
                            </div>
                    </form>
                </div>
                <div class="col-bg">
                    <img class="bg-1" src="~/images/chao-mao.png"></img>
                    <img class="bg-2" src="~/images/chao-mao-2.png"></img>
                </div>
            </div>

            <div class="col-9">
                <div class="content__list row">
                    @{
                        if (ViewBag.error != null)
                        {
                            <span class="text-danger">@ViewBag.error</span>
                        }
                    }
                    @foreach (var data in fieldtripList)
                    {
                        <div class="col-4 p-0">
                            <div class="club-item">

                                <a href="#" class="club-image">
                                    @{
                                        if (data.SpotlightImage != null)
                                        {
                                            <img class="img-fluid" src="@data.SpotlightImage.Image" alt="nt1">
                                        }
                                        else
                                        {
                                            <img class="img-fluid" src="~/images/fieldtrip.png" alt="nt1">
                                        }
                                    }
                                </a>
                                <div class="club-title">
                                    <a href="@Url.Action("FieldTripPost", "FieldTrip",new {id = data.TripId})" class="text-decoration-none truncate">@data.TripName</a>
                                </div>

                                <p class="club-price"><i class="fas fa-calendar-alt"></i>
                                    From @data.StartDate.ToString("MM-dd-yyyy") 
                                    to @data.EndDate.ToString("MM-dd-yyyy")</p>
                                <div class="club-address" data-toggle="tooltip" data-placement="auto"
                                    title="@data.City">
                                    <p class="address truncate text-white">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span class="district">Address @data.AreaNumber,@data.Street,@data.District,@data.City</span>
                                    </p>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <p class="address truncate text-white"><i class="fas fa-comment-alt"></i>@data.Description</p>
                                    <form asp-action="FieldTripPost" asp-controller="FieldTrip" method="get" asp-route-id="@data.TripId">
                                        <button class="button--primary text-white text-wrapper-16" type="submit">See Now</button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    }
                    </div>
                <div class="pagination mb-3">
                        <!-- <li class="page-item previous-page disabled">
                        <a class="page-link btn" href="#">Prev</i></a>
                    </li>
                    <li class="pages page-item current-page ">
                        <a class="page page-link" href="#">1</a>
                    </li>
                    <li class="pages page-item dots">
                        <a class="page page-link" href="#">...</a>
                    </li>
                    <li class="pages page-item current-page ">
                        <a class="page page-link" href="#">5</a>
                    </li>
                    <li class="pages page-item current-page ">
                        <a class="page page-link" href="#">6</a>
                    </li>
                    <li class="pages page-item dots">
                        <a class="page page-link" href="#">...</a>
                    </li>
                    <li class="pages page-item current-page ">
                        <a class="page page-link" href="#">10</a>
                    </li>
                    <li class="page-item next-page">
                        <a class="page-link btn" href="#">Next</i></a>
                    </li> -->
                    </div>
                </div>
            </div>
        </section>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
        referrerpolicy="no-referrer"></script>
        <!-- Jquery Waypoint -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
        <!-- BS4 JS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.5/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
