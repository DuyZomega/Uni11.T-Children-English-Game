@model BAL.ViewModels.MemberViewModel
@{
    IFormFile? formFile = null;
    BAL.ViewModels.Member.UpdateMemberPassword memberPassword = new();
    Layout = null;
    ViewData["Title"] = "Staff Profile Page";
    List<SelectListItem> genders = new()
    {
        new SelectListItem {Text = "Male",Value = "Male"},
        new SelectListItem {Text = "Female",Value = "Female"},
        new SelectListItem {Text = "Other",Value = "Other"}
    };
    foreach(var gender in genders)
    {
        if (Model.Gender.Equals(gender.Text))
        {
            gender.Selected = true;
        }
    }
        Layout = "~/Views/Shared/_SLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/owner-style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
</head>

<body>
    <!-- sidebar -->
        <div class="sidebar">
        <div class="container">
            <div class="navigation">  
                <ul class="slide-menu">
                    <div class="logo">
                        <a href="@Url.Action("StaffIndex", "Staff")">
                            <img class="logo" src="~/images/Red_whiskered_bulbul_bird_logo_eps_10_generated 1.png" alt="logo">
                        </a>
                    </div>
                    <li class="active" data-toggle="tooltip"data-placement="right" title="Overview">
                        <a href="@Url.Action("StaffIndex", "Staff")">
                            <span><i class='bx bx-tachometer'></i></span>
                            <span class="title">Overview</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            <i class='bx bx-bookmarks'></i>
                            <span class="title">Manage</span>
                            <i class='bx bxs-chevron-down drop'></i>
                        </a>
                        <ul class="collapse sub-menu" id="collapseOne">
                            <li data-toggle="tooltip"data-placement="right" title="Manage Meeting">
                                <a href="@Url.Action("StaffMeeting", "Staff")" li class="dropdown-item">
                                    <i class='bx bx-home-alt-2'></i>
                                    <span class="title">Meeting</span>
                                </a> 
                            </li>
                            <li data-toggle="tooltip"data-placement="right" title="Manage Fieldtrip">
                                <a href="@Url.Action("StaffFieldtrip", "Staff")" li class="dropdown-item">
                                    <i class='bx bx-calendar-edit'></i>
                                    <span class="title">Fieldtrip</span>
                                </a>
                            </li> 
                            <li data-toggle="tooltip"data-placement="right" title="Manage Bird Contest">
                                <a href="@Url.Action("StaffContest", "Staff")" li class="dropdown-item">
                                    <i class='bx bx-trophy'></i>
                                    <span class="title">Bird Contest</span>
                                </a>
                            </li>                          
                        </ul>
                    </li>
                    <li data-toggle="tooltip"data-placement="right" title="Staff Profile">
                        <a href="@Url.Action("StaffProfile", "Staff")">
                            <span><i class='bx bx-user'></i></span>
                            <span class="title">Staff Profile</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End sidebar -->

    <!-- Header -->
    <div class="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="toggle float-left">
                            <i class='bx bx-menu'></i>
                        </div>
                        <div class="float-left">
                            <div class="dashboard_bar d-flex">
                                Home
                            </div>
                        </div>
                        <div class="float-right">
                            <div class="btn-group me-1 mb-1">
                                <div class="dropdown">
                                    @if (TempData["ROLE_NAME"] != null)
                                    {
                                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @TempData["USER_NAME"]
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="@Url.Action("StaffProfile", "Staff")"><i class='bx bx-user'></i>Staff Profile</a> <!--thêm theo user id và role-->
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Auth")">Logout</a>
                                    </div>
                                    }
                                </div>  
                            </div>
                        </div>   
                    </div>
                </div>
            </div>
        </div>
    <!-- End header -->

    <div class="main-content">
        <div id="accordion">
            <!-- Thông tin cá nhân -->
            <div class="card mx-5 mb-2">
                <div class="card-header card-setting" id="headingOne">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#profile"
                            aria-expanded="true" aria-controls="profile">
                            My Profile <i class='bx bx-chevron-right'></i>
                        </button>
                    </h5>
                </div>
                <div class="collapse show" id="profile" aria-labelledby="profile" data-parent="#accordion">
                    <div class="card-body">
                        <div class="user-profile">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="profile-pic">
                                        <img src="@Model.ImagePath" id="output" width="200"/>
                                        <div class="upload">
                                            <button class="btn btn-warning" data-toggle="modal" data-target="#uploadImg">Details</button>                                                   
                                            <i class='bx bxs-camera-plus'></i>
                                        </div>
                                    </div>
                                    <div class="profile-name">@Model.FullName</div>
                                </div>
                                <div class="col-lg-8">                                
                                    <div class="profile-content">
                                        <div class="contact-infor">
                                            <div class="info-title">
                                                <h4>Personal Information</h4>
                                            </div>
                                            <div class="info-content">
                                                <form asp-action="StaffProfileUpdate" asp-controller="Staff" class="form-check">
                                                    <div class="row username-content">
                                                        <label class="contact-title col-md-5 col-sm-4 mt-3">Username: </label>

                                                        <input asp-for="UserName" id="userName" type="text" name="username"
                                                               class="form-control col-md-5 col-sm-8 mt-2" readonly
                                                               value="@Model.UserName">
                                                        <span asp-validation-for="UserName" id="error_message"
                                                              class="error-message col-md-2 mt-3"></span>

                                                    </div>
                                                    <div class="row fullname-content">
                                                        <label class="contact-title col-md-5 col-sm-4 mt-3">Full Name: </label>

                                                        <input asp-for="FullName" id="fullName" type="text" name="fullname"
                                                               class="form-control col-md-5 col-sm-8 mt-2" readonly
                                                               value="@Model.FullName">
                                                        <span asp-validation-for="FullName" id="error_message"
                                                              class="error-message col-md-2 mt-3"></span>

                                                    </div>
                                                    <div class="row phone-content">
                                                        <label class="contact-title col-md-5 col-sm-4 mt-3">Phone Number: </label>

                                                        <input asp-for="Phone" id="phone" type="tel" name="phone" value="@Model.Phone"
                                                               class="form-control col-md-5 col-sm-8 mt-2">
                                                        <span asp-validation-for="Phone" id="error_message"
                                                              class="error-message col-md-2 mt-3"></span>

                                                    </div>
                                                    <div class="row address-content">
                                                        <label class="contact-title col-md-5 col-sm-4 mt-3">Address: </label>

                                                        <input asp-for="Address" type="text" name="address" value="@Model.Address"
                                                               class="form-control col-md-5 col-sm-8 mt-2">
                                                        <span asp-validation-for="Address" id="error_message"
                                                              class="error-message col-md-2 mt-3"></span>

                                                    </div>
                                                    <div class="row email-content">
                                                        <label class="contact-title col-md-5 col-sm-4 mt-3">Email: </label>

                                                        <input asp-for="Email" id="email" type="email" name="email" value="@Model.Email"
                                                               class="form-control col-md-5 col-sm-8 mt-2">
                                                        <span asp-validation-for="Email" id="error_message"
                                                              class="error-message col-md-2 mt-3"></span>

                                                    </div>
                                                    <div class="row gender-content">
                                                        <label class="contact-title col-md-5 col-sm-4 mt-3">Gender: </label>
                                                        <select class="form-control col-md-5 col-sm-8 mt-2" asp-for="@Model.Gender" asp-items="@genders" class="custom-select" name="gender" id="gender">
                                                        </select>
                                                    </div>

                                                    <div class="row pt-3 d-flex">
                                                        <button type="submit" class="offset-3 btn btn-success">Confirm Changes</button>
                                                    </div>
                                                </form>     
                                            </div>  
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Change password -->
            <div class="card mx-5 mb-2">
                <div class="card-header card-setting" id="headingTwo">
                    <h5 class="mb-0">
                        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo"
                            aria-expanded="false" aria-controls="collapseTwo">
                            Change Password <i class='bx bx-chevron-right'></i>
                        </button>
                    </h5>
                </div>
                <div class="collapse" id="collapseTwo" aria-labelledby="headingTwo" data-parent="#accordion">
                    <div class="card-body">
                        <div class="card-group d-block">
                            <form asp-action="ChangePassword" asp-controller="Staff" method="post">
                                <div class="row form-group">
                                    <label asp-for=@memberPassword.password class="offset-md-3 col-md-2 col-sm-3 col-form-label">Old Password</label>
                                    <input asp-for=@memberPassword.password class="col-md-3 col-sm-5 form-control" type="password"
                                           name="password" required value=@memberPassword.password>
                                    <span asp-validation-for=@memberPassword.password class="error-message col-sm-3 mt-2"></span>
                                </div>
                                <div class="row form-group">
                                    <label asp-for=@memberPassword.Newpassword class="offset-md-3 col-md-2 col-sm-3 col-form-label">New Password</label>
                                    <input asp-for=@memberPassword.Newpassword class="col-md-3 col-sm-5 form-control" type="password"
                                           name="Newpassword" id="password" required value=@memberPassword.Newpassword>
                                    <span asp-validation-for=@memberPassword.Newpassword class="error-message col-sm-3 mt-2"></span>
                                </div>
                                <div class="row form-group">
                                    <label asp-for=@memberPassword.NewConfirmPassword class="offset-md-3 col-md-2 col-sm-3 col-form-label">Confirm</label>
                                    <input asp-for=@memberPassword.NewConfirmPassword class="col-md-3 col-sm-5 form-control" type="password" name="newconfirmpassword"
                                           id="confirm" required value=@memberPassword.NewConfirmPassword>
                                    <span asp-validation-for=@memberPassword.NewConfirmPassword class="error-message col-sm-3 mt-2"></span>
                                </div>
                                <div class="row form-group justify-content-center">
                                    <button type="submit" class="btn btn-success">Confirm Change</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- edit Home -->
    <div id="uploadImg" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="content">
            <div class="modal-content modal-addRoom">
                <div class="modal-header">
                    <h4 class="modal-title">Change Profile Picture</h4>
                </div>
                <form asp-action="UploadImage" asp-controller="Staff" enctype="multipart/form-data">
                    <div class="modal-body">
                        <label class="custom-control-label d-flex">
                            <input asp-for="@formFile" type="file" class="custom-file" accept=".jpg, .jpeg, .png" name="photo" onchange="loadFile(event)">   
                        </label>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button class="btn btn-success" type="submit" id="confirm">Save</button>
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>
