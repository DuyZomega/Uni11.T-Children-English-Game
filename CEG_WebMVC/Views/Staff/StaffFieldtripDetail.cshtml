                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>FieldTrip Medias</h4>
                                </div>
                                <div class="card-body">
                                    <div class="card-header">
                                        <h4>Spotlight</h4>
                                    </div>
                                    @{
                                        if (Spotlight != null)
                                        {
                                            <div class="row">
                                                <div class="col-md-5 text-md-right">
                                                    <label for="meeting-name">Image:</label>
                                                </div>
                                                <div class="col-md-7">
                                                    <img class="img-fluid" src="@Spotlight.Image" alt="nt1">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-5 text-md-right">
                                                    <label for="meeting-name">Description:</label>
                                                </div>
                                                <div class="col-md-7">
                                                    <span>@Spotlight.Description</span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-5 text-md-right">
                                                    <label for="meeting-name">Type:</label>
                                                </div>
                                                <div class="col-md-7">
                                                    <span>@Spotlight.Type</span>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                                <div class="card-body">
                                    <div class="card-header">
                                        <h4>Location Map</h4>
                                    </div>
                                    @{
                                        if (LocationMap != null)
                                        {
                                            <div class="row">
                                                <div class="col-md-5 text-md-right">
                                                    <label for="meeting-name">Image:</label>
                                                </div>
                                                <div class="col-md-7">
                                                    <img class="img-fluid" src="@LocationMap.Image" alt="nt1">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-5 text-md-right">
                                                    <label for="meeting-name">Description:</label>
                                                </div>
                                                <div class="col-md-7">
                                                    <span>@LocationMap.Description</span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-5 text-md-right">
                                                    <label for="meeting-name">Type:</label>
                                                </div>
                                                <div class="col-md-7">
                                                    <span>@LocationMap.Type</span>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                                <div class="card-body">
                                    @{
                                        if (Media != null && Media.Count > 0)
                                        {
                                            @foreach (var pic in Media)
                                            {
                                                <div class="card-header">
                                                    <h4>Additional Media</h4>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5 text-md-right">
                                                        <label for="meeting-name">Image:</label>
                                                    </div>
                                                    <div class="col-md-7">
