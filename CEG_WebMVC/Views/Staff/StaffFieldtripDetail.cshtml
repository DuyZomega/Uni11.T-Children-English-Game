                                                    <div class="col-sm-7 text-sm-left">
                                                        <span>@addDetail.Type</span>
                                                    </div>
                                                </div>
                                                <hr class="container my-0">
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Important to know</h4>
                                </div>
                                <div class="card-body">
                                    @{
                                        if (Importants != null && Importants.Count > 0)
                                        {
                                            @foreach (var addDetail in Importants)
                                            {
                                                <div class="card-header">
                                                    <h5>Important to Know @addDetail.Title Details</h5>
                                                </div>
                                                <div class="row mb-sm-2">
                                                    <div class="col-sm-5 text-sm-right">
                                                        <label for="meeting-name">Title:</label>
                                                    </div>
                                                    <div class="col-sm-7 text-sm-left">
                                                        <span>@addDetail.Title</span>
                                                    </div>
                                                </div>
                                                <div class="row mb-sm-2">
                                                    <div class="col-sm-5 text-sm-right">
                                                        <label for="meeting-name">Description:</label>
                                                    </div>
                                                    <div class="col-sm-7 text-sm-left">
                                                        <span>@addDetail.Description</span>
                                                    </div>
                                                </div>
                                                <div class="row mb-sm-2">
                                                    <div class="col-sm-5 text-sm-right">
                                                        <label for="meeting-name">Type:</label>
                                                    </div>
                                                    <div class="col-sm-7 text-sm-left">
                                                        <span>@addDetail.Type</span>
                                                    </div>
                                                </div>
                                                <hr class="container my-0">
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Activities and Transportation</h4>
                                </div>
                                <div class="card-body">
                                    @{
                                        if (ActAndTras != null && ActAndTras.Count > 0)
                                        {
                                            @foreach (var addDetail in ActAndTras)
                                            {
                                                <div class="card-header">
                                                    <h5>ActAndTransport @addDetail.Title Details</h5>
                                                </div>
                                                <div class="row mb-sm-2">
                                                    <div class="col-sm-5 text-sm-right">
                                                        <label for="meeting-name">Title:</label>
                                                    </div>
                                                    <div class="col-sm-7 text-sm-left">
                                                        <span>@addDetail.Title</span>
                                                    </div>
                                                </div>
                                                <div class="row mb-sm-2">
                                                    <div class="col-sm-5 text-sm-right">
                                                        <label for="meeting-name">Description:</label>
                                                    </div>
                                                    <div class="col-sm-7 text-sm-left">
                                                        <span>@addDetail.Description</span>
                                                    </div>
                                                </div>
                                                <div class="row mb-sm-2">
                                                    <div class="col-sm-5 text-sm-right">
                                                        <label for="meeting-name">Type:</label>
                                                    </div>
                                                    <div class="col-sm-7 text-sm-left">
                                                        <span>@addDetail.Type</span>
                                                    </div>
                                                </div>
                                                <hr class="container my-0">
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Getting There</h4>
                                </div>
                                <div class="card-body">
                                    @{
                                        if (Gettingthere != null)
                                        {
                                            <div class="row">
                                                <div class="col-md-5 text-md-right">
                                                    <label for="meeting-name">Start & End:</label>
                                                </div>
                                                <div class="col-md-7">
                                                    <span>@Gettingthere.GettingThereStartEnd</span>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-5 text-md-right">
                                                    <label for="meeting-name">Flight:</label>
                                                </div>
                                                <div class="col-md-7">
                                                    <span>@Gettingthere.GettingThereFlight</span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-5 text-md-right">
                                                    <label for="meeting-name">Transportation:</label>
                                                </div>
                                                <div class="col-md-7">
                                                    <span>@Gettingthere.GettingThereTransportation</span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-5 text-md-right">
                                                    <label for="meeting-name">Accommodation:</label>
                                                </div>
                                                <div class="col-md-7">
                                                    <span>@Gettingthere.GettingThereAccommodation</span>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Day By Day</h4>
                                </div>
                                <div class="card-body">
                                    @{
                                        if (DayByDay != null && DayByDay.Count > 0)
                                        {
                                            foreach (var day in DayByDay)
                                            {
                                                <div class="card-header">
                                                    <h5>Day @day.Day Details</h5>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5 text-md-right">
                                                        <label for="meeting-name">MainDestination:</label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <span>@day.MainDestination</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5 text-md-right">
                                                        <label for="meeting-name">Accommodation:</label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <span>@day.Accommodation</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5 text-md-right">
                                                        <label for="meeting-name">MealsAndDrinks:</label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <span>@day.MealsAndDrinks</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5 text-md-right">
                                                        <label for="meeting-name">Description:</label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <span>@day.Description</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5 text-md-right">
                                                        <label for="meeting-name">Media:</label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <span>@day.Media</span>
                                                    </div>
                                                </div>
                                                <hr class="container my-0">
                                            }
                                        }
                                    }
                                    @* <div class="row">
                                    <div class="col-md-5 text-md-right">
                                    <label for="meeting-name">Media:</label>
                                    </div>
                                    <div class="col-md-7">
                                    <span>@day.Media</span>
                                    </div>
                                    </div> *@
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Inclusions</h4>
                                </div>
                                <div class="card-body">
                                    @{
                                        if (Inclusion != null && Inclusion.Count > 0)
                                        {
                                            @foreach (var inc in Inclusion)
                                            {
                                                <div class="card-header">
                                                    <h5>Inclusion @inc.Title Details</h5>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5 text-md-right">
                                                        <label for="meeting-name">Inclusion Text:</label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <span>@inc.InclusionText</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5 text-md-right">
                                                        <label for="meeting-name">Type:</label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <span>@inc.Type</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5 text-md-right">
                                                        <label for="meeting-name">Inclusion Type:</label>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <span>@inc.Inclusiontype</span>
                                                    </div>
                                                </div>
