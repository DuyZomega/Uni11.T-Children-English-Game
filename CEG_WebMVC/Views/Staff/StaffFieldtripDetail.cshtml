                                            foreach (var addDetail in TourFeatures)
                                            {
                                                <div class="card-header">
                                                    <h5>Tour Feature @addDetail.Title Details</h5>
                                                </div>
                                                <div class="row mb-sm-2">
                                                    <div class="col-sm-5 text-sm-right">
                                                        <label for="meeting-name">Title:</label>
                                                    </div>
                                                    <div class="col-sm-7 text-sm-left">
                                                        <span>@addDetail.Title</span>
                                                    </div>
                                                </div>
                                                <div class="row mb-sm-2">
                                                    <div class="col-sm-5 text-sm-right">
                                                        <label for="meeting-name">Description:</label>
                                                    </div>
                                                    <div class="col-sm-7 text-sm-left">
                                                        <span>@addDetail.Description</span>
                                                    </div>
                                                </div>
                                                <div class="row mb-sm-2">
                                                    <div class="col-sm-5 text-sm-right">
                                                        <label for="meeting-name">Type:</label>
