                <div class="row">
                    <div class="col-7 customer-booking">
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Course Information</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-sm-2">
                                        <div class="col-md-5 text-md-right">
                                            <label class="col-form-label">Course ID:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span >
                                                @courseInfo.CourseId
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-md-5 text-md-right">
                                            <label class="col-form-label">Status:</label>
                                        </div>
                                        <div class="col-sm-7">
                                            @{
                                                switch (courseInfo.Status)
                                                {
                                                    case "Available":
                                                        {
                                                            <span class="outcome" style="float: left;">@courseInfo.Status</span>
                                                            break;
                                                        }
                                                    case "Draft":
                                                    case "Postponed":
                                                        {
                                                            <span class="approval" style="float: left;">@courseInfo.Status</span>
                                                            break;
                                                        }
                                                    case "EndofService":
                                                    case "Cancelled":
                                                        {
                                                            <span class="destroy" style="float: left;">@courseInfo.Status</span>
                                                            break;
                                                        }
                                                }
                                            }
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-md-5 text-md-right">
                                            <label class="col-form-label">Course Name:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span >
                                                @courseInfo.CourseName
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-md-5 text-md-right">
                                            <label class="col-form-label">Course Type:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span >
                                                @courseInfo.CourseType
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-md-5 text-md-right">
                                            <label class="col-form-label">Course Description:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span >
                                                @courseInfo.Description
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-md-5 text-md-right">
                                            <label class="col-form-label">Total Hours:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span >
                                                @courseInfo.TotalHours
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-md-5 text-md-right">
                                            <label class="col-form-label">Required Age:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span >
                                                @courseInfo.RequiredAge
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-md-5 text-md-right">
                                            <label class="col-form-label">Difficulty:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span >
                                                @courseInfo.Difficulty
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-md-5 text-md-right">
                                            <label class="col-form-label">Category:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span >
                                                @courseInfo.Category
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-md-5 text-md-right">
                                            <label class="col-form-label">Total Session Amount:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span >
                                                @courseInfo.SessionAmount Sessions
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-md-5 text-md-right">
                                            <label class="col-form-label">Total Class Amount:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span >
                                                @courseInfo.ClassAmount Classes
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
