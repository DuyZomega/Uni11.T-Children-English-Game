            @Html.DisplayFor(model => model.Token)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VnPayResponseCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VnPayResponseCode)
