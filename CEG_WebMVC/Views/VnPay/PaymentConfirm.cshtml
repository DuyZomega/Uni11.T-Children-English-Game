        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDescription)
        </dd>
        <dt class="col-sm-2">
