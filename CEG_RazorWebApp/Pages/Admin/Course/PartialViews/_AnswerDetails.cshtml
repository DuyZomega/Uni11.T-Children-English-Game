@model CEG_RazorWebApp.Models.HomeworkAnswer.Get.AdminAnswerInfoPVM
@{
    var answerInfo = Model.AnswerInfo;
    var updateAnswer = Model.UpdateAnswerInfo;
}
<div class="card-header">
    <h5>Answer <label class="truncate">@answerInfo.Answer</label> Details</h5>
    @{
        if (Model.HomeworkStatus.Equals("Draft") || Model.HomeworkStatus.Equals("Postponed"))
        {
            <div class="edit-info">
                <i class='bx bxs-edit' data-toggle="modal" data-target="#editanswer_@answerInfo.HomeworkAnswerId"></i>
            </div>
        }
    }
</div>
<div class="card-body">
    <div class="row mb-sm-2">
        <div class="col-md-5 text-md-right">
            <label class="col-form-label">Answer ID:</label>
        </div>
        <div class="col-md-7">
            <span>
                @answerInfo.HomeworkAnswerId
            </span>
        </div>
    </div>
    <div class="row mb-sm-2">
        <div class="col-sm-5 text-sm-right">
            <label for="meeting-name">Answer:</label>
        </div>
        <div class="col-sm-7 text-sm-left">
            <span>@answerInfo.Answer</span>
        </div>
    </div>
    <div class="row mb-sm-2">
        <div class="col-sm-5 text-sm-right">
            <label for="meeting-name">Answer Type:</label>
        </div>
        <div class="col-sm-7 text-sm-left">
            <span>@answerInfo.Type</span>
        </div>
    </div>
</div>
<hr class="container my-0">

@if (Model.HomeworkStatus.Equals("Draft") || Model.HomeworkStatus.Equals("Postponed"))
{
    <div id="editanswer_@answerInfo.HomeworkAnswerId" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="content">
            <div class="modal-content modal-addRoom">
                <div class="modal-header">
                    <h4 class="modal-title truncate">Update Answer @answerInfo.Answer</h4>
                </div>
                <form asp-page-handler="AnswerUpdate" method="post" asp-route-questionId="@Model.QuestionId" asp-route-answerId="@answerInfo.HomeworkAnswerId" class="form-group">
                    <div class="modal-body">
                        <div class="col-12">
                            <div class="form-group row">
                                <label asp-for="@updateAnswer.Answer" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <textarea asp-for="@updateAnswer.Answer" value="@updateAnswer.Answer" required class="form-control col-md-7"></textarea>
                                    <span asp-validation-for="@updateAnswer.Answer" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="@updateAnswer.Type" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <select class="form-control custom-select" asp-for="@updateAnswer.Type" asp-items="@updateAnswer.DefaultAnswerTypeSelectList"></select>
                                    <span asp-validation-for="@updateAnswer.Type" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button class="btn btn-success" type="submit" value="Update">Save</button>
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
