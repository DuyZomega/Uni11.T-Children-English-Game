@model dynamic
@{
    ViewData["Title"] = "Member History Event Page";
    List<BAL.ViewModels.Event.GetEventParticipation> events = Model.RegisteredEvents;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
    <!-- Other-->
    <link rel="stylesheet" href="https://unpkg.com/filepond-plugin-file-poster/dist/filepond-plugin-file-poster.css">
</head>
<body>

    <hr>
    <div class="header__breadcrumb container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Member Event History</li>

            </ol>
        </nav>
    </div>
    <hr>

    <div class="profile container">
        <div class="row">
            <div class="navigation col-2" style="background:white">
                <ul class="slide-menu" style="background-color:white">
                    <li>
                        <a href="@Url.Action("MemberProfile", "Member")">
                            <span><i class="bx bx-user"></i></span>
                            <span class="title">Account</span>
                        </a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("MemberHistoryEvent", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Registered Event</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("MemberBird", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Bird</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("MemberPayment", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Payment</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("MemberNotification", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Notifications</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="main-content col-10">
                <div class="main">
                    <div class="container-fluid">
                        <section>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table id="history-table" class="table table-striped table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>EventID</th>
                                                            <th>EventName</th>
                                                            <th>EventType</th>
                                                            <th>RegistrationDeadline</th>
                                                            <th>StartDate</th>
                                                            <th>EndDate</th>
                                                            <th>ParticipationNo</th>
                                                            <th>Fee</th>
                                                            <th>Status</th>
                                                            <th>CheckInStatus</th>
                                                            <th>Options</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @for (int i = 0; i < events.Count(); i++)
                                                        {
                                                            <tr>
                                                                <td>@events[i].EventId</td>
                                                                <td title="More Details"><a class="title" href="@Url.Action(events[i].EventType + "Post", events[i].EventType,new {id = events[i].EventId})">@events[i].EventName</a></td>
                                                                <td>@events[i].EventType</td>
                                                                <td>@events[i].RegistrationDeadline</td>
                                                                <td>@events[i].StartDate</td>
                                                                <td>@events[i].EndDate</td>
                                                                <td>@events[i].ParticipationNo</td>
                                                                <td>@events[i].Fee</td>
                                                                <td>@events[i].Status</td>
                                                                <td>@events[i].CheckInStatus</td>
                                                                <td>
                                                                    <div class="d-flex justify-content-around">

                                                                        <div class="rating-club">
                                                                            <a class="button--primary btn-info bg-info shadow btn-xs text-white"
                                                                               href="@Url.Action(events[i].EventType + "Post", events[i].EventType,new {id = events[i].EventId})">Details</a>
                                                                        </div>
                                                                        @switch (events[i].EventType)
                                                                        {
                                                                            case "Meeting":
                                                                                {
                                                                                    switch (events[i].Status)
                                                                                    {
                                                                                        case "Preparing":
                                                                                            {
                                                                                                <form asp-action="@(events[i].EventType)Deregister" asp-controller="@events[i].EventType" method="post" asp-route-meetingId="@events[i].EventId">
                                                                                                    <div class="report-club">
                                                                                                        <button class="button--primary btn-danger bg-danger shadow btn-xs text-white" type="submit">Sign Out</button>
                                                                                                    </div>
                                                                                                </form>
                                                                                                break;
                                                                                            }
                                                                                        case "Open":
                                                                                        case "OnGoing":
                                                                                            {
                                                                                                <form asp-action="@(events[i].EventType)Deregister" asp-controller="@events[i].EventType" method="post" asp-route-meetingId="@events[i].EventId">
                                                                                                    <div class="report-club">
                                                                                                        <button class="button--primary btn-danger bg-danger shadow btn-xs text-white" type="submit">Sign Out</button>
                                                                                                    </div>
                                                                                                </form>
                                                                                                break;
                                                                                            }
                                                                                        case "Ended":
                                                                                            {
                                                                                                <div class="report-club">
                                                                                                    <button data-toggle="modal"
                                                                                                            data-target="#feedback"
                                                                                                            class="button--primary btn-danger shadow btn-xs sharp text-white bg-danger">
                                                                                                        <span>Feedback</span>
                                                                                                    </button>
                                                                                                </div>
                                                                                                break;
                                                                                            }
                                                                                        case "Cancelled":
                                                                                            {
                                                                                                <div class="report-club">
                                                                                                    <button data-toggle="modal"
                                                                                                            data-target="#report"
                                                                                                            class="button--primary btn-danger shadow btn-xs sharp text-white bg-danger">
                                                                                                        <span>Report</span>
                                                                                                    </button>
                                                                                                </div>
                                                                                                break;
                                                                                            }
                                                                                    }
                                                                                    break;
                                                                                }
                                                                            case "FieldTrip":
                                                                                {
                                                                                    switch (events[i].Status)
                                                                                    {
                                                                                        case "Preparing":
                                                                                            {
                                                                                                <form asp-action="@(events[i].EventType)Deregister" asp-controller="@events[i].EventType" method="post" asp-route-tripId="@events[i].EventId">
                                                                                                    <div class="report-club">
                                                                                                        <button class="button--primary btn-danger bg-danger shadow btn-xs text-white" type="submit">Sign Out</button>
                                                                                                    </div>
                                                                                                </form>
                                                                                                break;
                                                                                            }
                                                                                        case "Open":
                                                                                        case "OnGoing":
                                                                                            {
                                                                                                <form asp-action="@(events[i].EventType)Deregister" asp-controller="@events[i].EventType" method="post" asp-route-tripId="@events[i].EventId">
                                                                                                    <div class="report-club">
                                                                                                        <button class="button--primary btn-danger bg-danger shadow btn-xs text-white" type="submit">Sign Out</button>
                                                                                                    </div>
                                                                                                </form>
                                                                                                break;
                                                                                            }
                                                                                        case "Ended":
                                                                                            {
                                                                                                <div class="report-club">
                                                                                                    <button data-toggle="modal"
                                                                                                            data-target="#feedback"
                                                                                                            class="button--primary btn-danger shadow btn-xs sharp text-white bg-danger">
                                                                                                        <span>Feedback</span>
                                                                                                    </button>
                                                                                                </div>
                                                                                                break;
                                                                                            }
                                                                                        case "Cancelled":
                                                                                            {
                                                                                                <div class="report-club">
                                                                                                    <button data-toggle="modal"
                                                                                                            data-target="#report"
                                                                                                            class="button--primary btn-danger shadow btn-xs sharp text-white bg-danger">
                                                                                                        <span>Report</span>
                                                                                                    </button>
                                                                                                </div>
                                                                                                break;
                                                                                            }
                                                                                    }
                                                                                    break;
                                                                                }
                                                                            case "Contest":
                                                                                {
                                                                                    switch (events[i].Status)
                                                                                    {
                                                                                        case "Preparing":
                                                                                            {
                                                                                                <form asp-action="@(events[i].EventType)Deregister" asp-controller="@events[i].EventType" method="post" asp-route-contestId="@events[i].EventId">
                                                                                                    <div class="report-club">
                                                                                                        <button class="button--primary btn-danger bg-danger shadow btn-xs text-white" type="submit">Sign Out</button>
                                                                                                    </div>
                                                                                                </form>
                                                                                                break;
                                                                                            }
                                                                                        case "Open":
                                                                                        case "OnGoing":
                                                                                            {
                                                                                                <form asp-action="@(events[i].EventType)Deregister" asp-controller="@events[i].EventType" method="post" asp-route-contestId="@events[i].EventId">
                                                                                                    <div class="report-club">
                                                                                                        <button class="button--primary btn-danger bg-danger shadow btn-xs text-white" type="submit">Sign Out</button>
                                                                                                    </div>
                                                                                                </form>
                                                                                                break;
                                                                                            }
                                                                                        case "Ended":
                                                                                            {
                                                                                                <div class="report-club">
                                                                                                    <button data-toggle="modal"
                                                                                                            data-target="#feedback"
                                                                                                            class="button--primary btn-danger shadow btn-xs sharp text-white bg-danger">
                                                                                                        <span>Feedback</span>
                                                                                                    </button>
                                                                                                </div>
                                                                                                break;
                                                                                            }
                                                                                        case "Cancelled":
                                                                                            {
                                                                                                <div class="report-club">
                                                                                                    <button data-toggle="modal"
                                                                                                            data-target="#report"
                                                                                                            class="button--primary btn-danger shadow btn-xs sharp text-white bg-danger">
                                                                                                        <span>Report</span>
                                                                                                    </button>
                                                                                                </div>
                                                                                                break;
                                                                                            }
                                                                                    }
                                                                                    break;
                                                                                }
                                                                        }
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div id="feedback" class="modal fade" role="dialog">
                                                <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                                                    <div class="modal-content modal-addRoom">
                                                        <div class="modal-header">
                                                            <h4 class="modal-title">
                                                                Feedback Event
                                                            </h4>
                                                        </div>
                                                        
                                                            <div class="modal-body">
                                                                <div class="row p-4">
                                                                    <div class="col-12">
                                                                        <div class="row form-group">
                                                                            <input name="bookingID"
                                                                                   value="booking03"
                                                                                   style="display: none">
                                                                            <input name="userID"
                                                                                   value="hai03"
                                                                                   style="display: none">
                                                                            <input name="motelID"
                                                                                   value="785146827"
                                                                                   style="display: none">
                                                                            <label for="rating"
                                                                                   class="col-md-3 col-form-label text-md-right">Rating</label>
                                                                            <div class="form-group col-md-5 stars">
                                                                                <input class="star star-5"
                                                                                       id="star-5"
                                                                                       type="radio"
                                                                                       name="rating"
                                                                                       value="5" />
                                                                                <label class="star star-5"
                                                                                       for="star-5"></label>
                                                                                <input class="star star-4"
                                                                                       id="star-4"
                                                                                       type="radio"
                                                                                       name="rating"
                                                                                       value="4" />
                                                                                <label class="star star-4"
                                                                                       for="star-4"></label>
                                                                                <input class="star star-3"
                                                                                       id="star-3"
                                                                                       type="radio"
                                                                                       name="rating"
                                                                                       value="3" />
                                                                                <label class="star star-3"
                                                                                       for="star-3"></label>
                                                                                <input class="star star-2"
                                                                                       id="star-2"
                                                                                       type="radio"
                                                                                       name="rating"
                                                                                       value="2" />
                                                                                <label class="star star-2"
                                                                                       for="star-2"></label>
                                                                                <input class="star star-1"
                                                                                       id="star-1"
                                                                                       type="radio"
                                                                                       name="rating"
                                                                                       value="1" />
                                                                                <label class="star star-1"
                                                                                       for="star-1"></label>
                                                                            </div>
                                                                        </div>
                                                                        <div class="row form-group">
                                                                            <label for="desct"
                                                                                   class="col-md-3 col-form-label text-md-right">
                                                                                Nội
                                                                                dung
                                                                            </label>
                                                                            <textarea type="text"
                                                                                      placeholder="..."
                                                                                      required
                                                                                      class="form-control col-md-7"
                                                                                      rows="3"
                                                                                      name="desct"></textarea>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer justify-content-center">
                                                                    <button class=" button--primary bg-success text-white "
                                                                            type="submit" name="action"
                                                                            value="feedback">
                                                                        Feedback
                                                                    </button>
                                                                    <button class="button--primary bg-danger text-white"
                                                                            type="button"
                                                                            data-dismiss="modal">
                                                                        Cancel
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        
                                                    </div>
                                                </div>
                                            </div>
                                            <!--Report-->
                                            <div id="report" class="modal fade" role="dialog">
                                                <div class="modal-dialog modal-dialog-centered modal-lg"
                                                     role="document">
                                                    <div class="modal-content modal-addRoom">
                                                        <div class="modal-header">
                                                            <h4 class="modal-title">Report</h4>

                                                        </div>
                                                        <form action="@Url.Action("ManagerManageEvent", "Manager")">
                                                            <div class="modal-body">
                                                                <div class="row p-4">
                                                                    <div class="col-12">
                                                                        <input name="userID" value="1"
                                                                               style="display: none">
                                                                        <div class="row form-group">
                                                                            <label for="rating"
                                                                                   class="col-md-3 col-form-label text-md-right">Title</label>
                                                                            <input type="text" name="title"
                                                                                   placeholder="Title"
                                                                                   class="col-md-7 form-control">
                                                                        </div>
                                                                        <div class="row form-group">
                                                                            <label for="rating"
                                                                                   class="col-md-3 col-form-label text-md-right">Date</label>
                                                                            <input type="date" name="date"
                                                                                   placeholder="Fee"
                                                                                   class="col-md-7 form-control">
                                                                        </div>
                                                                        <div class="row form-group">
                                                                            <label for="desct"
                                                                                   class="col-md-3 col-form-label text-md-right">Description</label>
                                                                            <textarea type="text"
                                                                                      placeholder="Describe..."
                                                                                      required=""
                                                                                      class="form-control col-md-7" rows="3"
                                                                                      name="desct"></textarea>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer justify-content-center">
                                                                    <button class="button--primary bg-success text-white"
                                                                            type="submit" name="action" value="report">
                                                                        Report
                                                                    </button>
                                                                    <button class="button--primary bg-danger text-white"
                                                                            type="button" data-dismiss="modal">
                                                                        Cancel
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--End of Report-->
                                        </div>
                                    </div>
                                </div>
                                <!-- /# card -->
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
            referrerpolicy="no-referrer"></script>
    <!-- Jquery Waypoint -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
    <!-- BS4 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.5/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- main js -->
    <script src="~/js/user-script.js"></script>
    <script>
        $(document).ready(function () {
            $("#history-table").DataTable({
                pagingType: "full_numbers",
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $(".clickable-row").click(function () {
                window.location = $(this).data("href");
            });
        });
    </script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
</body>
</html>