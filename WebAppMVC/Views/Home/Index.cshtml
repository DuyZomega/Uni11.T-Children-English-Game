                </div>
            </div> 
      </section>
    <section class="main-container">      
            <span class="text">Welcome to </span
            ><span class="text-2">ChaoMao</span><span class="text-4">BirdClub</span>
          <div class="group">
              <div class="group-content">
            <span class="text-5"
              >Founded in 2024 by Duong Qua, ChaoMao Bird-club aims to
              gather, share, exchanging fun, interesting information about birds
              and bird fans a like. We aim to create a big and awesome bird
              lover community in Vietnam and soon expand it further beyond. By
              bird lovers, for bird lovers.</span
            >
            <div class="img-2"></div>
            <div class="section"><a class="text-6" href="@Url.Action("login", "Auth")">Join Now!</a></div>
            </div>
        </div>
        </section>
        <section class="club container spacing" style="background-color:white">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="heading"><i class="fa fa-newspaper"></i> Latest News</h3>
        </div>        
        <div class="club__content">
            <div class="d-flex justify-content-between align-items-center">
            <h5><i class="fa fa-sort-amount-down"></i> Meetings</h5>
            <a href="@Url.Action("Index","Meeting")" class="font-a"> See All <i class="fa fa-angle-right"></i></a></div>
            <div class="famousList-carousel owl-carousel owl-theme">
                @foreach (var data in meetingList)
                {
                        <div class="club-item">
                            <a href="#" class="club-image">
                                <img class="img-fluid" src="~/images/meeting.png" alt="nt1">
                            </a>
                            <div class="club-title">
                                <div class="d-flex justify-content-between">
                                <a href="@Url.Action("MeetingPost", "Meeting",new {id = data.MeetingId})" class="text-decoration-none truncate">@data.MeetingName</a>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                    <p class="club-price"><i class="fas fa-calendar"></i> 
                                        From @data.StartDate.ToString("MM/dd/yyyy") 
                                        to @data.EndDate.ToString("MM/dd/yyyy")</p>
                                <button class="button--primary"><a class="text-decoration-none text-black"
                                        href="@Url.Action("MeetingPost", "Meeting",new {id = data.MeetingId})">See More</a></button>
                            </div>
                        </div>
                }
            </div>
            <div class="d-flex justify-content-between align-items-center">
            <h5><i class="fa fa-sort-amount-down"></i> Field Trips</h5>
            <a href="@Url.Action("Index","FieldTrip")" class="font-a"> See All <i class="fa fa-angle-right"></i></a></div>
            <div class="ratingList-carousel owl-carousel owl-theme">
                @foreach (var data in fieldtripList)
                {
                    <div class="club-item">
                        <a href="#" class="club-image">
                            <img class="img-fluid" src="~/images/meeting.png" alt="nt1">
                        </a>
                        <div class="club-title">
                            <div class="d-flex justify-content-between">
                            <a href="@Url.Action("FieldTripPost", "FieldTrip",new {id = data.TripId})" class="text-decoration-none truncate">@data.TripName</a>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="club-price">
                                <i class="fas fa-calendar"></i>
                                From @data.StartDate.ToString("MM/dd/yyyy")
                                to @data.EndDate.ToString("MM/dd/yyyy")
                            </p>
                            <button class="button--primary">
                                <a class="text-decoration-none text-black"
                               href="@Url.Action("FieldTripPost", "FieldTrip",new {id = data.TripId})">See More</a>
                            </button>
                        </div>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-between align-items-center">
            <h5><i class="fa fa-sort-amount-down"></i> Bird Contests</h5>
            <a href="@Url.Action("Index","Contest")" class="font-a"> See All <i class="fa fa-angle-right"></i></a></div>
            <div class="ratingList-carousel owl-carousel owl-theme">
                @foreach (var data in contestList)
                {
                    <div class="club-item">
                        <a href="#" class="club-image">
                            <img class="img-fluid" src="~/images/meeting.png" alt="nt1">
                        </a>
                        <div class="club-title">
                            <div class="d-flex justify-content-between">
                            <a href="@Url.Action("ContestPost", "Contest",new {id = data.ContestId})" class="text-decoration-none truncate">@data.ContestName</a>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                                <p class="club-price"><i class="fas fa-calendar"></i> 
                                    From @data.StartDate.ToString("MM/dd/yyyy") 
                                    to @data.EndDate.ToString("MM/dd/yyyy")</p>
                            <button class="button--primary"><a class="text-decoration-none text-black"
                                href="@Url.Action("ContestPost", "Contest",new {id = data.ContestId})">See More</a></button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <hr class="container my-0"/>
